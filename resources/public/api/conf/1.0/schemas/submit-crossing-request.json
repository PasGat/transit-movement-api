{
  "description": "Submit the details of a crossing",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "departureDateTime",
    "departurePort",
    "destinationPort",
    "duration",
    "carrier",
    "captureDateTime"
  ],
  "properties": {
    "departureDateTime": {
      "type": "string",
      "description": "The date and time of the crossing departure",
      "format": "date-time",
      "example": "2019-09-15T15:53:00Z"
    },
    "departurePort": {
      "type": "string",
      "description": "The departure port of the crossing",
      "enum": [
        "Calais",
        "Coquelles",
        "Dublin",
        "Dunkirk"
      ]
    },
    "destinationPort": {
      "type": "string",
      "description": "The destination port of the crossing",
      "enum": [
        "Dover",
        "Folkestone",
        "Holyhead"
      ]
    },
    "duration": {
      "type": "number",
      "description": "The duration of the crossing in minutes"
    },
    "carrier": {
      "type": "string",
      "description": "The carrier of the transit",
      "enum": [
        "Irish Ferries",
        "DFDS",
        "Eurotunnel",
        "P&O",
        "Stena Line"
      ]
    },
    "captureDateTime": {
      "type": "string",
      "description": "The time that the crossing has been registered",
      "example": "2019-09-15T15:53:00Z"
    }
  }
}