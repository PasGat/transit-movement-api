{
  "type": "object",
  "description": "Details of a transit movement",
  "required": [
    "crossingDetails",
    "movementReferenceNumber",
    "transitUnitType",
    "transitUnitReferenceNumber",
    "transitMetadata"
  ],
  "properties": {
    "crossingDetails": {
      "type": "object",
      "description": "Details of a crossing",
      "required": [
        "departurePort",
        "destinationPort",
        "duration",
        "carrier"
      ],
      "properties": {
        "departureDateTime": {
          "type": "string",
          "description": "The date and time of the crossing departure",
          "format": "date-time",
          "example": "2019-09-15T15:53:00Z"
        },
        "departurePort": {
          "type": "string",
          "description": "The departure port of the crossing",
          "enum": [
            "Calais",
            "Coquelles",
            "Dublin",
            "Dunkirk"
          ]
        },
        "destinationPort": {
          "type": "string",
          "description": "The destination port of the crossing",
          "enum": [
            "Dover",
            "Folkestone",
            "Holyhead"
          ]
        },
        "duration": {
          "type": "number",
          "description": "The duration of the crossing in minutes"
        },
        "carrier": {
          "type": "string",
          "description": "The carrier of the transit",
          "enum": [
            "Irish Ferries",
            "DFDS",
            "Eurotunnel",
            "P&O",
            "Stena Line"
          ]
        }
      }
    },
    "movementReferenceNumber": {
      "type": "string",
      "description": "The reference number of the transit movement",
      "pattern": "\\d{2}[a-zA-Z]{2}[a-zA-Z0-9]{14}"
    },
    "transitUnitType": {
      "type": "string",
      "description": "The type of transit unit",
      "enum": [
        "Vehicle",
        "Container",
        "Trailer"
      ]
    },
    "transitUnitReferenceNumber": {
      "type": "string",
      "description": "The reference number of the transit unit that the transit movement is on",
      "minLength": 1,
      "maxLength": 20,
      "pattern": "^[\\-A-Z0-9 ]{1,20}$"
    },
    "transitMetadata": {
      "type": "object",
      "description": "Details about the capturing of the transit movement data",
      "required": [
        "captureMethod",
        "captureDateTime"
      ],
      "properties": {
        "captureMethod": {
          "type": "string",
          "description": "The method that was used to capture the MRN",
          "enum": [
            "Scan",
            "Manual"
          ]
        },
        "captureDateTime": {
          "type": "string",
          "description": "The date and time that the MRN was captured",
          "example": "2019-09-15T15:50:00Z"
        }
      }
    }
  }
}